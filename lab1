int main()
{
    setlocale(LC_CTYPE, "rus");
    int x, work = 10;
    for (int i = 0;1;i)
    {
        if (oleg == -401238478) {
            system("cls");
            cout << "Лабораторная работа №1" << endl << endl;
            cout << "Введите номер задания: ";
            cin >> x;
        }
        else x = oleg;
        if ((x > work) or (x < 1)) {
            cout << "Задания с таким номером не существует :( \nДля продолжения нажмите любую кнопку" << endl;
            int key = _getch();
            oleg = -401238478;
        }
        else {
            system("cls");
            cout << "Лабораторная работа №1" << endl << endl;
            cout << "Задание №" <<x<< endl<<endl;
            switch (x) {
            case 1:
                number1();
                break;
            case 2:
                number2();
                break;
            case 3:
                number3();
                break;
            case 4:
                number4();
                break;
            case 5:
                number5();
                break;
            case 6:
                number6();
                break;
            case 7:
                number7();
                break;
